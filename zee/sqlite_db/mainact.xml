<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">
	
     <EditText android:id="@+id/idEdtCourseName"
               android:layout_width="match_parent" 
               android:layout_height="wrap_content" 
               android:layout_margin="10dp"
               android:hint="Enter course Name" />

	<EditText android:id="@+id/idEdtCourseDuration" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content" 
               android:layout_margin="10dp" 
               android:hint="Enter Course Duration" />

	<EditText android:id="@+id/idEdtCourseTracks" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content" 
               android:layout_margin="10dp" 
               android:hint="Enter Course Tracks" />

	<EditText android:id="@+id/idEdtCourseDescription" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content" 
               android:layout_margin="10dp" 
               android:hint="Enter Course Description" />

	<Button android:id="@+id/idBtnAddCourse" 
               android:layout_width="match_parent" 
               android:layout_height="wrap_content" 
               android:layout_margin="10dp" 
               android:text="Add Course" 
               android:textAllCaps="false" />
</LinearLayout>